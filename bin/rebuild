#!/bin/bash

echo Rebuilding database
rm -rf var/db.sqlite
uwiki-migrate || exit $?

echo Creating user: $(whoami)
uwiki-user -p password --role wheel $(whoami)  || exit $?

echo Creating initial pages
uwiki-media set -t page Index < etc/pages/Index || exit $?
uwiki-media set -t page Markdown < etc/pages/Markdown || exit $?
uwiki-media set -t page --private Private < etc/pages/Private || exit $?
