#!/bin/bash

echo Rebuilding database
rm -rf var/db.sqlite
uwiki-migrate || exit $?

echo Creating user: $(whoami)
uwiki-user -p password --role wheel $(whoami)  || exit $?

echo Creating initial pages
uwiki-media -t page edit Index < etc/pages/Index || exit $?
uwiki-media -t page edit Markdown < etc/pages/Markdown || exit $?
uwiki-media -t page --private edit Private < etc/pages/Private || exit $?
