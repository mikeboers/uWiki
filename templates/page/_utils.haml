
@nav(path, active=None)

    - active = active or request.args.get('action', '')
    @tab(action)
        %li(class_='active' if action == active else '')
            %a(href='#' if action == active else url_for('page', path=path, **{'action': action} if action else {}))
                +caller.body

    %ul.nav.nav-tabs
        +tab('') Read
        +tab('edit') Edit
        +tab('history') View History
